@model QuizPrepAi.Models.ViewModels.QuizAnswerViewModel

@{
    ViewData["Title"] = "Quiz Page";
}

<div class="text-center">
    <form asp-controller="Quiz" asp-action="Quiz" method="post">
        <input type="hidden" name="quizId" value="@Model.QuizId" />
        <input type="hidden" name="questionId" value="@Model.QuestionId" />
        <input type="hidden" name="totalQuestions" value="@Model.TotalQuestions" />
        <div class="quiz-question mb-4">
            <h2>@Model.Question</h2>
            <div class="quiz-answers">
                @for (var i = 0; i < Model.Answers.Count; i++)
                {
                    var answer = Model.Answers[i];
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="selectedAnswer" id="answer-@i" value="@answer" @(Model.SelectedAnswer == answer ? "checked" : "") />
                        <label class="form-check-label" for="answer-@i">
                            @answer
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Next</button>
    </form>
</div>
