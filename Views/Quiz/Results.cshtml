@model QuizPrepAi.Models.QuizModel

<h2>Quiz Results</h2>

<p>You scored @Model.CorrectAnswers out of @Model.TotalQuestions questions.</p>

<h3>Review</h3>

@foreach (var question in Model.Questions)
{
        <div class="question">
            <h4>@question.Text</h4>
            <ul class="answers">
            @foreach (var answer in question.Answers)
            {
                        <li>@answer.Text</li>
            }
            </ul>
            <p>Your answer: @question.UserAnswer</p>
            <p>Correct answer: @question.CorrectAnswer</p>
        </div>
}

<h3>Explanation</h3>

<p>Explanation for incorrect questions:</p>

<div id="explanation"></div>

<h3>Study Guide</h3>

<p>Study guide for incorrect questions:</p>

<div id="study-guide"></div>
