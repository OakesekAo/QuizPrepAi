@model QuizPrepAi.Models.Quiz

<h2>Quiz Results</h2>

<p>You scored @Model.CorrectAnswers out of @Model.TotalQuestions questions.</p>

<h3>Review</h3>

@foreach (var question in Model.Question)
{
    <div class="question">
        <h4>@question.SingleQuestion</h4>
        <ul class="answers">
            @foreach (var answer in Model.SelectedAnswer)
            {
                <li>@answer</li>
            }
        </ul>
        <p>Your answer: @Model.SelectedAnswer</p>
        <p>Correct answer: @question.CorrectAnswer</p>
    </div>
    if (@Model.SelectedAnswer.ToString() != question.CorrectAnswer)
    {
        <div class="explanation">
            <h4>Explanation</h4>
            <p>question.Explanation</p>
        </div>
        <div class="study-guide">
            <h4>Study Guide</h4>
            <p>question.StudyGuide</p>
        </div>
    }
}

